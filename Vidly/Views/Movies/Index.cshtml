@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var c in Model)
        {
            string x = "Details/" + @c.Id;
            <tr>
                <td><a href=@x> @c.Name</a></td>
                <td>@c.Genre</td>
            </tr>
            x = null;
        }
    </tbody>

</table>